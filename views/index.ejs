<%- include("partials/header"); -%>

    <div class="card-group">
        <!-- Table of Contents-->
        <div class="card w-25 min-h-100 m-3">

            <div class="card-header">

                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="true" href="#">All</a>
                    </li>
                </ul>
            </div>

            <div class="card-body">
                <h3 class="card-title">Your Notes</h3>
                <p class="card-text">Collections</p>

                <ul class="list-group list-group-flush">
                    <% notes.forEach( function(note) { %>
                        <li class="list-group-item">
                            <%= note.title %>
                        </li>
                        <% }); %>
                </ul>
            </div>

        </div>

        <div class="deck w-75 m-3" id="deck">

            <% notes.forEach( function(note) { %>
                <a href="/note/<%= note.id %>">
                    <div class="card mb-3 width-18">
                        <div class="card-header">
                            <%= note.date.toLocaleString() %>
                        </div>
                        <div class="card-body h-100">
                            <h5 class="card-title">
                                <%= note.title %>
                            </h5>
                            <p class="card-text mt-2 text-black-50">
                                <%= note.text.substring(0, 128).replace(/<[^>]*>?/gm, ' ') %>
                            </p>
                            <a href="/note/<%= note.id %>" class="card-link">Open</a>
                            <a href="/delete/<%= note.id %>" class="card-link" id="delete" onclick="return confirm('Are you sure you want to delete this note?');">Delete</a>
                        </div>

                    </div>
                </a>

                <% }); %>

        </div>
    </div>

    <%- include("partials/footer"); -%>